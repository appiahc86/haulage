<%- include('../layouts/adminHeader'); %>
<br>
<h3 class="text-center"><span class="fas fa-user-lock"></span> <b>Reset Password</b></h3>
<br>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow p-4">


                <form action="/users/password/reset" method="post" class="myform">

                    <div class="form-group">
                        <input type="password" placeholder="Current Password" name="currentPassword" value="<%= typeof currentPassword != 'undefined' ? currentPassword : ''%>" class="form-control" required>

                        <% if (typeof errCurrentPassword != 'undefined'){ %>
                            <span class="text-danger">
                           <strong><%= errCurrentPassword %></strong>
                        </span>
                        <% } %>

                    </div>

                    <div class="form-group">
                        <input type="password" placeholder="New Password" value="<%= typeof password != 'undefined' ? password : ''%>" name="password" class="form-control" required>

                        <% if (typeof errPassword != 'undefined'){ %>
                            <span class="text-danger">
                           <strong><%= errPassword %></strong>
                        </span>
                        <% } %>
                    </div>

                    <div class="form-group">
                        <input type="password" placeholder="Confirm Password" name="password_confirmation" class="form-control" required>

                    </div>

                    <div class="form-group">
                        <button type="submit" class="mybtn btn btn-primary btn-sm"><span class="fas fa-lock"></span> Reset</button>
                        <span class="invalid-feedback error-message" role="alert">
                           <strong> new error</strong>
                        </span>
                    </div>


                </form>



            </div>
        </div>
    </div>
</div>

















<%- include('../layouts/adminFooter'); %>