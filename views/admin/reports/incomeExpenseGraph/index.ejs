<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>Clemonic</title>
    <link rel="icon" href="/img/icon.ico">

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="/plugins/fontawesome-free/css/all.min.css">
    <!-- overlayScrollbars -->
    <!--    <link rel="stylesheet" href="/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">-->
    <!-- Theme style -->
    <link rel="stylesheet" href="/css/adminlte.min.css">

    <style>
        .btn-violet{
            background: mediumorchid;
            color: white;
        }
        .btn-violet:hover{
            background: darkmagenta;
            color: wheat;
        }

        body{
            user-select: none;
        }

        @media print {
            .btn{
                display: none;
            }

            .col-md-9{
                width: 1280px;
            }
            @page  { size: landscape }


        }

    </style>
</head>

<body class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed" oncontextmenu="return false">

<div class="wrapper">

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header text-center">
                    <span><b>CLEMONIC LIMITED</b></span><br>
                    <span>Income & Expenses Graph</span><br>
                    <span>For The Year <%= new Date().getFullYear() %></span><br>

                    <h5 class="card-title">
                        <span><button onclick="window.print()" class="btn btn-success btn-sm"><span class="fas fa-print"></span> Print</button></span>
                        <span class="ml-4"><a href="/report" class="btn btn-secondary btn-sm"><span class="fas fa-arrow-circle-left"></span> Back</a></span>
                    </h5>
                </div>

                <!-- /.card-header -->
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-9">

                            <div class="chart">
                                <!-- Sales Chart Canvas -->
                                <canvas id="salesChart" height="180" style="height: 300px;"></canvas>
                            </div>
                            <div class="d-flex flex-row justify-content-end">
                  <span class="mr-2">
                    <i class="fas fa-square text-primary"></i> Income
                  </span>

                    <span>
                    <i class="fas fa-square" style="color: rgba(220,220,220,1);"></i> Expenses
                  </span>
                            </div>
                            <!-- /.chart-responsive -->
                        </div>
                        <!-- /.col -->
                        <div class="col-md-3">

                            <h6 class="mt-5"><b>Total Income: </b><span id="totalIncome"></span></h6>
                            <h6><b>Total Expenses: </b><span id="totalExpenses"></span></h6>

                            <h4 class="mt-2 text-fuchsia"><b>Net Income: </b><span id="netIncome"></span></h4>

                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- ./card-body -->

            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>



</div>
<!-- ./wrapper -->

<!-- REQUIRED SCRIPTS -->
<!-- jQuery -->
<script src="/plugins/jquery/jquery.min.js"></script>

<!-- Bootstrap -->
<script src="/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>


<!-- AdminLTE App -->
<script src="/js/adminlte.js"></script>

<!-- ChartJS -->
<script src="/plugins/chart.js/Chart.min.js"></script>

<%- include('../../../partials/incomeExpenseGraph') %>

</body>
</html>
