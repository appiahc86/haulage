<% if (parseInt(user.role) === 1 || parseInt(user.role) === 2){ %>

    <%- include('../../layouts/adminHeader') %>

<% } else { %>

    <%- include('../../layouts/userHeader') %>

<% } %>
<br>
<h3 class="text-center font-weight-bold">Trips</h3>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow p-3">

                <table class="table table-sm table-hover" id="myTable">

                    <thead class="thead-dark">
                    <tr>
                        <th>Truck</th>
                        <th class="text-right">Number Of Trips</th>
                    </tr>
                    </thead>
                        <% for(const truck of trucks){ %>
                            <tr>
                                <td><%= truck.licenseNumber %></td>
                                <td>
                                    <form action="/trips/<%= truck._id %>?_method=PATCH" method="post">
                                        <input class="form-control"
                                               type="number"
                                               min="0"
                                               max="15"
                                               name="trip"
                                               onchange="form.submit()"
                                               style="float: right; width: 100px !important;"
                                               value="<%= parseInt(truck.trips) %>">
                                    </form>
                                </td>
                            </tr>
                        <% } %>
                    <tbody>



                    </tbody>

                </table>

            </div>
        </div>
    </div>
</div>







<%- include('../../layouts/adminFooter') %>





